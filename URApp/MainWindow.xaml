<Window x:Class="URApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <!-- Define the columns for the layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Input options column -->
            <ColumnDefinition Width="3*"/>
            <!-- Output options column -->
        </Grid.ColumnDefinitions>

        <!-- Define the rows for the layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For connection controls -->
            <RowDefinition Height="*"/>
            <!-- For main content -->
        </Grid.RowDefinitions>

        <!-- Connection controls -->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="IP Adresse:"/>
            <TextBox x:Name="IpTextBox" Width="120" Margin="5,0"/>
            <Label Content="Port:"/>
            <TextBox x:Name="PortTextBox" Width="80" Margin="5,0"/>
            <Button Content="Connect" Click="ConnectButton_Click" Margin="5,0" IsDefault="True"/>
            <Ellipse x:Name="StatusLight" Fill="Red" Width="20" Height="20" VerticalAlignment="Center" Margin="5,0"/>
        </StackPanel>

        <!-- Input options on the left side -->
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
            <Label Content="Command:"/>
            <TextBox x:Name="CommandTextBox" Width="200" Height="23" Margin="5,5"/>
            <Button Content="Send Command" Click="SendCommandButton_Click" Margin="5,5"/>
            <Button Content="Disconnect" Click="DisconnectButton_Click" Margin="5,5"/>
        </StackPanel>

        <!-- Output Section -->
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Actual TCP Pose" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X:"/>
                <TextBox x:Name="TcpPoseX" Width="80"/>
                <TextBlock Text="Y:"/>
                <TextBox x:Name="TcpPoseY" Width="80"/>
                <TextBlock Text="Z:"/>
                <TextBox x:Name="TcpPoseZ" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="RX:"/>
                <TextBox x:Name="TcpPoseRX" Width="80"/>
                <TextBlock Text="RY:"/>
                <TextBox x:Name="TcpPoseRY" Width="80"/>
                <TextBlock Text="RZ:"/>
                <TextBox x:Name="TcpPoseRZ" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
