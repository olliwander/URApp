<Window x:Class="URApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="401" Width="349">
    <Grid>
        <StackPanel>
            <Label>Username:</Label>
            <TextBox x:Name="UsernameTextBox"/>
            <Label>Password:</Label>
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Login" Click="LoginButton_Click" IsDefault="True"/>
            <Button Name="RegisterButton" Content="Register" Margin="0,5,0,0" Click="RegisterButton_Click"/>

        </StackPanel>
    </Grid>
</Window>

